class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        int n= nums.size();
        int i=0;
        double windowsum=0;
        // double avg=0;

        for(int i=0;i<k;i++){
            windowsum+=nums[i];
        }
        double maxsum=windowsum;
        for(int i=k;i<n;i++){
            windowsum += nums[i] - nums[i-k];
            maxsum = max(maxsum, windowsum);
        }
        return maxsum/k;
    }
};
