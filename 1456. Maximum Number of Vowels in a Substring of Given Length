class Solution {
public:
    int maxVowels(string s, int k) {
        int n= s.size();
        unordered_set<char> vowels= {'a','e','i','o','u'};
        int ans=INT_MIN;
        int count=0;
        for(int i=0;i<k;i++){
            if(vowels.count(s[i])) count++;
        }
        ans = count;
        for(int i=k;i<n;i++){
            if(vowels.count(s[i])) count++;
            if(vowels.count(s[i-k])) count--;
            ans = max(ans,count);
            if (ans == k) return k;
        }
        return ans;
    }
};
