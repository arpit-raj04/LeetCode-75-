class Solution {
public:
int maxi(vector<int> a){
    int m = a[0];
    for(auto it:a){
        m = max(it,m);
    }
    return m;
}
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
        vector<bool> result;
        int m = maxi(candies);
        for(int i=0;i<candies.size();i++){
            candies[i] += extraCandies;
            if(candies[i]>=m) result.push_back(true);
            else result.push_back(false);
        }
        return result;
    }
};
